{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "components": ["src/components"],
      "components/*": ["src/components/*"],
      "data": ["src/data"],
      "data/*": ["src/data/*"],
      "hooks": ["src/hooks"],
      "hooks/*": ["src/hooks/*"],
      "images": ["src/images"],
      "images/*": ["src/images/*"],
      "types/*": ["src/types/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
